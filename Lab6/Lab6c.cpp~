/* Program: CS 115 Lab 6c

   Author: Cory Bekker

   Description: This program walks through nested for-loops.

*/

#include <iostream>

#include <iomanip>

using namespace std;

 

int main () {

   int i, j, k;        // Loop counters

   int line = 1;    // Line counter

   

   for (i = 1; i <= 3; i++) {

      for (j = 1; j <= 4; j++) {

         for (k = 3; k >= 1; k--) {

            cout << setw(2) << i << setw(2) << j

                 << setw(2) << k << '\t';

         }

      }

   }

   return 0;

}